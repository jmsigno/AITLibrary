<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("AIT LIBRARY", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Convert.ToInt32(Session["UserLevel"]) == 1)
                    {
                        <li>@Html.ActionLink("Home", "Library", "Media")</li>
                        <li>@Html.ActionLink("My Media", "MyMedia", "UserDashboard")</li>
                        <li>@Html.ActionLink("Logout", "Login", "Account")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Home", "AdminPanel", "Admin")</li>
                        <li>@Html.ActionLink("Media", "MediaManager", "Admin")</li>
                        <li>@Html.ActionLink("Reports", "Reports", "Admin")</li>
                        <li>@Html.ActionLink("Logout", "Login", "Account")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year: 7213 Jordan M Signo - Enterprise System Project AIT-B19 </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
